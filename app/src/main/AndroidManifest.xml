<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yvonneyang.mediaselector">
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.MEDIA_MOUNTED" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:configChanges="screenSize|keyboardHidden|keyboard|orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="yvonne.mediaselector_lib.activity.MediaChooserBucketActivity"
            android:configChanges="screenSize|keyboardHidden|keyboard|orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name="yvonne.mediaselector_lib.activity.MediaChooserVideoActivity"
            android:configChanges="screenSize|keyboardHidden|keyboard|orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
    </application>

</manifest>